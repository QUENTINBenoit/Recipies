{% extends 'base.html.twig' %}

{% block title %}list des Users |
	{{ parent()}}
{% endblock %}

{% block body %}

	<div class="container my-4">
		<h1>Liste des Users</h1>
		{% include "partials/_flash.html.twig" %}
		<table class="table table-hover ">
			<thead>
				<tr>
					<th scope="col">NAME</th>
					<th scope="col">ID</th>
					<th scope="col">PSEUDO</th>
					<th scope="col">E-Mail</th>
					{# <th scope="col">ROLES</th> #}
					<th scope="col">DATE</th>
				</tr>
			</thead>
			<tbody>
				<ul>
					{% for listUser   in  listUsers  %}

						<tr class="table-dark">
							<th scope="row">{{listUser.fullName}}</th>
							<td>{{listUser.id}}</td>
							<td>{{listUser.pseudo}}</td>
							<td>{{listUser.email}}</td>
							{# <td>{{listUser.roles}}</td> #}
							<td>{{listUser.createdAt|date("d/m/y")}}</td>
							<td>
								<a href="{{path('user_edit', {id: listUser.id})}}" class="btn btn-outline-info btn-sm">Editer</a>
							</td>
							<td>
								<a href="{{path('user_delete', {id: listUser.id}) }}" class="btn btn-outline-danger btn-sm">
									c
								</a>
								{# {{ include('user/_delete_form.html.twig') }} #}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</tbody>
		</ul>
	</tbody>
</table></div>{% endblock %}
