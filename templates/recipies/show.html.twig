{% extends "base.html.twig" %}

{% block title %}
	SymRecipe -
	{{ recipe.name }}
{% endblock %}

{% block body %}
	<div class="container">
		{% include "partials/_flash.html.twig" %}

		<h1 class="mt-4">{{ recipe.name }}</h1>
		<p>La moyenne de cette recette est de
			<span class="badge bg-info">{{ recipe.average|number_format(2, '.', ',')}}
				/5</span>
		</p>

		<div>
			<span class="badge bg-primary my-4">Créée le
				{{ recipe.createdAt|date('d/m/Y') }}</span>
		</div>
		<div class="recipe__image">
			<img style="max-width: 15rem;" class="rounded" src="{{ vich_uploader_asset(recipe, 'imageFile') }}">
		</div>

		<div class="mt-4">
			{% if recipe.time %}
				<p>Temps (en minute) :
					{{ recipe.time }}</p>
			{% else %}
				<p>Temps non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recipe.time %}
				<p>Difficulté :
					{{ recipe.difficulty }}/5</p>
			{% else %}
				<p>Difficulté non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recipe.time %}
				<p>Pour
					{{ recipe.nbPeaple }}
					personnes</p>
			{% else %}
				<p>Nombre de personnes non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{% if recipe.price %}
				<p>Prix (en €) :
					{{ recipe.price }}</p>
			{% else %}
				<p>Prix non renseigné</p>
			{% endif %}
		</div>

		<div class="mt-4">
			{{ recipe.description|raw }}
		</div>

		<div class="mt-4">
			<p class="mt-4">Ingrédients</p>
			{% for ingredient in recipe.ingredients %}
				<span class="badge bg-primary">{{ ingredient.name }}</span>
			{% endfor %}
		</div>

		<div class="mark">
			{{ form(form) }}
			</div>

		</div>
	{% endblock %}
