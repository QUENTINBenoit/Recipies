{% extends "base.html.twig" %}
{% block title %}
	{{parent()}}
	Nouvelle recette
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="mt-4">Cr√©ation d'une Recette</h1>
		{{ form_start(formRecipe) }}

		<div class="form-group">
			{{ form_label(formRecipe.name) }}
			{{ form_widget(formRecipe.name) }}
			<div class="form-error">
				{{ form_errors(formRecipe.name) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(formRecipe.time) }}
			{{ form_widget(formRecipe.time) }}
			<div class="form-error">
				{{ form_errors(formRecipe.time) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(formRecipe.nbPeaple) }}
			{{ form_widget(formRecipe.nbPeaple) }}
			<div class="form-error">
				{{ form_errors(formRecipe.nbPeaple) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(formRecipe.difficulty) }}
			{{ form_widget(formRecipe.difficulty) }}
			<div class="form-error">
				{{ form_errors(formRecipe.difficulty) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(formRecipe.description) }}
			{{ form_widget(formRecipe.description) }}
			<div class="form-error">
				{{ form_errors(formRecipe.description) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(formRecipe.price) }}
			{{ form_widget(formRecipe.price) }}
			<div class="form-error">
				{{ form_errors(formRecipe.price) }}
			</div>
		</div>

		<div class="form-group mt-4">
			{{ form_widget(formRecipe.isFavorite) }}
			{{ form_label(formRecipe.isFavorite) }}
			<div class="form-error">
				{{ form_errors(formRecipe.isFavorite) }}
			</div>
		</div>
		<div class="form-group mt-4">
			{{ form_row(formRecipe.imageFile) }}
		</div>
		<div class="form-group mt-4">
			{{ form_label(formRecipe.ingredients) }}
			<br>

			<div id="ingredients-wrapper">
				{% for field in formRecipe.ingredients %}
					<div style="min-width: 10%;">
						{{ form_widget(field) }}
						{{ form_label(field) }}
					</div>
				{% endfor %}
			</div>
		</div>
		{{ form_end(formRecipe) }}
	</div>


{% endblock %}
